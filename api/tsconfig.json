{
	"compilerOptions": {
    "declaration": false,
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "ES2020",
    "noImplicitAny": true,
    "outDir": "build",
    "preserveConstEnums": true,
    "removeComments": true,
    "noUnusedLocals": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "paths": {
      "*": [
        "node_modules/*"
      ]
    }
	},
	"ts-node": {
			"files": true
		},
	"include": [
    "src/**/*",
    "types/**/*.d.ts",
    "types/*.d.ts"],
}
